<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/request_cache_demo_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/request_cache_demo_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:textColor="@color/cube_demo_text_color" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_border_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/request_cache_demo_btn_use_cache_anyway"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_border"
                android:clickable="true"
                android:gravity="center"
                android:text="Use Cache Anyway"
                android:textColor="@color/button_dark_text" />

            <TextView
                android:id="@+id/request_cache_demo_btn_with_cache"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_border"
                android:clickable="true"
                android:gravity="center"
                android:text="Default Mode"
                android:textColor="@color/button_dark_text" />

            <TextView
                android:id="@+id/request_cache_demo_btn_no_cache"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_border"
                android:clickable="true"
                android:gravity="center"
                android:text="No Cache"
                android:textColor="@color/button_dark_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/request_cache_demo_btn_clear_log"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_border"
                android:clickable="true"
                android:gravity="center"
                android:text="Clear Log"
                android:textColor="@color/button_dark_text" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>